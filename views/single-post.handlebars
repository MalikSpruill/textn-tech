<section class="post-list flex flex-col justify-center items-center mt-5 h-full">
  <h2 class="text-3xl">Tech Posts</h2>
  <div>
    <article class="post flex flex-col my-5">
      <div class="title text-center">
        <a href="/post/{{posts.id}}" class="text-1xl text-lime-500 font-bold">{{posts.title}}</a>
      </div>
     <div class="meta flex h-40 flex-col text-center">
       <p class="mx-2"></p>
       <p>Created: {{format_date posts.created_at}} </p>
       <p>Creator: {{posts.user.username}}</p>
       <p>Msg: {{posts.post_message}}</p>
      <div>
    </article>
  </div>
  {{> comments posts.comments}}

  {{#if loggedIn}} 
<form class="flex justify-center basis-1/2 comment-form h-30 w-2/3">
  <div class="w-1/3 h-full">
    <textarea class="flex-auto w-full h-40 border border-indigo-500" name="comment-body" placeholder="Type comment here"></textarea>
  </div>

  <div>
    <button class="ml-10 w-30 h-10 border-2 border-indigo-600 rounded-lg font-bold bg-emerald-300" type="submit">add comment</button>
  </div>
</form>
{{else}}
{{/if}}


            
</section>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/logout.js"></script>
{{/if}}