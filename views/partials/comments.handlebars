<div class="flex flex-wrap comments my-5">
  {{#each this}}
  <section class="mx-6 comment">
    <div class="flex flex-col meta text-lg py-10 px-10 my-5 bg-cyan-400 rounded">
      <p>Name: {{user.username}}</p>
      <p>Created: {{format_date created_at}}</p>
      <p class="font-bold">{{comment_text}}</p>
    </div>
  </section>
  {{/each}}
</div>
    
