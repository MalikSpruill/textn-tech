<section class="flex flex-col w-full h-full items-center justify-center">
  <h2 class="my-3 text-3xl font-bold text-emerald-500">Create New Post</h2>

  <form class=" hidden new-post-form flex flex-col p-3 my-10 w-1/5 h-2/6 border-2 border-neutral-400 rounded-lg">
    <button class="exit self-end text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 shadow-lg shadow-red-500/50 dark:shadow-lg dark:shadow-red-800/80 font-medium rounded-full text-sm px-2.5 py-1 text-center mr-2">x</button>
    <div class="my-3">
      <label for="post-title" class="font-bold">Title</label>
      <input type="text" id="post-title" name="post-title" class="border-2 border-slate-900 rounded-lg p-1 mx-3" />
    </div>
    <div class="flex mt-5 h-1/3">
      <label for="text_contents" class="font-bold">Msg</label>
      <textarea class="w-2/3 h-3/4 mx-3 border-2 border-neutral-400 rounded-lg" id="text_contents"></textarea>
    </div>
    <button type="submit" class="ml-10 w-1/5 border-2 border-indigo-600 rounded-lg font-bold bg-emerald-300">Create</button>
  </form>
   <button id="togglePost" class="ml-10 mb-10 w-1/6 border-2 border-indigo-600 rounded-lg font-bold bg-emerald-300">Add Post</button>

<section>
  <h2 class="my-3 text-2xl font-bold text-emerald-600">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      <article class="post flex my-5">
        <div class="title">
          <a href="/post/{{id}}" class="text-1xl text-lime-500 font-bold">{{title}}</a>
        </div>
        <div class="meta flex">
          <p class="mx-2">Created: {{format_date created_at}} </p>
          <a href="/dashboard/edit/{{id}}" class="mx-2">comments: {{comments.length}}</a>
        <div>
      </article>
      <p><a href="/dashboard/edit/{{post.id}}" class="edit-link font-bold text-fuchsia-600">Edit</a></p>
    </li>
    {{/each}}
  </ol>
</section>
</section>



<script src="/javascript/add-post.js"></script>
{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
{{/if}}