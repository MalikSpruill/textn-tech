<article class="flex flex-col items-center">
  <div class="flex mt-5 justify-center">
    <a href="/dashboard" class=""> &larr; Back to dashboard</a>
    <h2 class="mx-10 text-center text-3xl font-bold text-emerald-500">
      Edit Post
    </h2>
  </div>
  <form class="flex flex-col items-center justify-center edit-post-form my-10 w-1/4 bg-purple-100 rounded-lg ">
    <div class="flex flex-col w-4/4">
      <div display="flex w-4/4">
        <p class="mx-1 font-bold text-center">Edit Title</p>
        <input name="post-title" type="text" class="border-2 border-slate-900 rounded-lg p-1 mx-1" value="{{post.title}}" />
      </div>
      <div display="flex mt-5">
          <p class="mx-1 font-bold text-indigo-400 text-center">Edit Msg</p>
          <textarea class="w-3/4 h-3/4 mx-3 border-2 border-neutral-400 rounded-lg" name="message-body"></textarea>
      </div>
    </div>
    <div class="flex">
      <p class="font-bold my-3 mx-3">{{format_date post.created_at}}</p>
      <a href="/post/{{post.id}}" class="mx-3 my-3">{{post.comments.length}} Comments</a>
    </div>
    <button type="submit" class="text-cyan-500 font-bold">Save post</button>
    <button class="delete-post-btn text-rose-600 font-bold">Delete post</button>
  </form>
  <div class="flex">
   <p class="mx-5 font-bold text-indigo-400">Msg:</p>
   <span class="bg-cyan-200 rounded-lg">({{post.post_message}})</span>
  </div>
  <form class="comment-form w-full">
    <div class="flex my-10 justify-center">
      <textarea class="w-1/4 h-3/4 mx-3 border-2 border-neutral-400 rounded-lg" name="comment-body"></textarea>
      <button class="ml-10 mb-10 h-2/5 w-1/6 border-2 border-indigo-600 rounded-lg font-bold bg-emerald-300">Add Comment</button>
    </div>
  </form>

</article>


{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
{{/if}}